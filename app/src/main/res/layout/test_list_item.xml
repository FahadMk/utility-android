<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:cardView="http://schemas.android.com/apk/res-auto"
    android:id="@+id/GradientcarView"
    android:foreground="?android:attr/selectableItemBackground"
    android:clickable="true"
    android:layout_width="match_parent"
    android:layout_height="70dp"
    cardView:cardCornerRadius="10dp"
    cardView:cardElevation="8dp"
    android:layout_margin="8dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:id="@+id/colorGradientTextView"
        android:background="@color/colorAccentIndigo"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_centerInParent="true"
            android:id="@+id/GradientCheckView"
            android:layout_height="wrap_content">
            <View
                android:layout_height="50dp"
                android:layout_width="50dp"
                android:backgroundTint="@color/transparent_50"
                android:background="@drawable/check_mark"
                android:layout_centerInParent="true"
                />
            <ImageView
                android:id="@+id/colorGradientImageView"
                android:scaleType="fitCenter"
                android:background="@drawable/ic_action_checked"
                android:layout_width="20dp"
                android:backgroundTint="@color/white"
                android:layout_centerInParent="true"
                android:layout_height="20dp" />
        </RelativeLayout>


    </RelativeLayout>
</androidx.cardview.widget.CardView>