<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?language_bg_color"
    android:orientation="vertical"
    tools:context="com.dgsl.utility_package.ui.language.LanguageActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_marginTop="20dp"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textColor="?attr/text_color"
        android:textSize="16sp"
        android:layout_marginLeft="@dimen/twenty_dp"
        android:text="Choose the language:"/>
    <View android:layout_height="@dimen/one_dp"
        android:layout_marginTop="10dp"
        android:background="?divider_color"
        android:layout_width="match_parent"/>
    <ListView
        android:layout_width="match_parent"
        android:dividerHeight="@dimen/one_dp"
        android:divider="?divider_color"
        android:choiceMode="singleChoice"
        android:background="?background_color"
        android:layout_height="wrap_content"
        android:id="@+id/languageListView"
        />
    <View android:layout_height="@dimen/one_dp"
        android:background="?divider_color"
        android:layout_width="match_parent"/>
</LinearLayout>