<?xml version="1.0" encoding="utf-8"?>
  <RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?language_bg_color"
    tools:context="com.dgsl.utility_package.ui.root_access_check.RootAccessActivity">
  <TextView
      android:layout_width="wrap_content"
      android:text="@string/try_again"
      android:visibility="gone"
      android:layout_alignParentTop="true"
      android:layout_marginRight="@dimen/twenty_dp"
      android:layout_alignParentRight="true"
      android:textStyle="bold"
      android:background="?attr/selectableItemBackgroundBorderless"
      android:clickable="true"
      android:layout_marginTop="@dimen/ten_dp"
      android:textSize="18sp"
      android:id="@+id/tryAgainTV"
      android:textColor="?attr/text_color"
      android:layout_height="wrap_content"/>
  <androidx.cardview.widget.CardView
      android:layout_width="match_parent"
      android:layout_marginLeft="@dimen/twenty_dp"
      android:layout_marginRight="@dimen/twenty_dp"
      android:visibility="visible"
      android:layout_marginTop="@dimen/twenty_dp"
      app:cardBackgroundColor="?root_access_bg_color"
      android:layout_alignParentStart="true"
      android:id="@+id/rootCardView"
      android:layout_height="200dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
      <TextView
          android:layout_width="match_parent"
          android:layout_above="@id/rootAccessCheckBtn"
          android:text="@string/check_for_root_access"
          android:gravity="center"
          android:textStyle="bold"
          android:textSize="18sp"
          android:textColor="?attr/text_color"
          android:layout_marginBottom="@dimen/ten_dp"
          android:layout_height="wrap_content"/>
      <Button
          android:layout_width="100dp"
          android:layout_height="100dp"
          android:text="Run test"
          android:textStyle="bold"
          android:id="@+id/rootAccessCheckBtn"
          android:theme="@style/Button.green"
          android:clickable="true"
          android:textColor="@color/white"
          android:layout_alignParentBottom="true"
          android:layout_centerHorizontal="true"
          android:layout_marginBottom="@dimen/thirty_dp"
          android:background="@drawable/round_shape_button_drawable" />
    </RelativeLayout>
  </androidx.cardview.widget.CardView>


  <LinearLayout
      android:layout_marginTop="40dp"
      android:layout_width="match_parent"
      android:orientation="vertical"
      android:visibility="gone"
      android:id="@+id/rootListLayoutView"
      android:layout_below="@id/rootCardView"
      android:layout_alignParentStart="true"
      android:background="@drawable/layout_all_side_corner"
      android:layout_marginLeft="@dimen/ten_dp"
      android:scrollbars="none"
      android:layout_marginRight="@dimen/ten_dp"
      android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_marginLeft="@dimen/ten_dp"
        android:layout_marginTop="@dimen/twenty_dp"
        android:layout_height="wrap_content">
      <TextView
          android:layout_width="match_parent"
          android:text="Details"
          android:layout_alignParentLeft="true"
          android:textSize="18sp"
          android:textColor="?attr/text_color"
          android:textStyle="bold"
          android:layout_height="wrap_content" />
      <TextView
          android:layout_width="wrap_content"
          android:textStyle="bold"
          android:textColor="?attr/text_color"
          android:layout_alignParentRight="true"
          android:layout_marginRight="@dimen/ten_dp"
          android:id="@+id/rootStatusTV"
          android:layout_height="wrap_content"/>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_marginTop="@dimen/five_dp"
        android:background="@color/light_gray"
        android:layout_height="1dp"
        />
    <ListView
        android:layout_width="match_parent"
        android:divider="?attr/divider_color"
        android:dividerHeight="1dp"
        android:scrollbars="none"
        android:clickable="false"
        android:focusable="false"
        android:layout_marginRight="@dimen/five_dp"
        android:layout_marginTop="@dimen/ten_dp"
        android:id="@+id/rootAccessListView"
        android:background="?attr/background_color"
        android:layout_marginLeft="@dimen/ten_dp"
        android:layout_marginBottom="@dimen/ten_dp"
        android:layout_height="wrap_content"/>
  </LinearLayout>

  </RelativeLayout>